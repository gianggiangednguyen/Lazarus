
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<section class="main-container col1-layout">
    <div class="main container">
        <div class="col-main">

            <div class="cart">

                <div class="page-content page-order">
                    <div class="page-title">
                        <h2>Giỏ hàng</h2>
                    </div>

                    <div class="order-detail-content">
                        <div class="table-responsive">
                            <form method="get">
                                <table class="table table-bordered cart_summary">
                                    <thead>
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th>Mô tả</th>
                                            <th>Tình trạng</th>
                                            <th>Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>Tổng tiền</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @await Component.InvokeAsync("ShoppingCart")
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="50" class="a-right last">
                                                <button asp-action="Index" asp-controller="Home" type="button" class="button btn-continue"><span>Tiếp tục mua</span></button>
                                                <button type="submit" class="button btn-empty"><span>Làm mới giỏ hàng</span></button>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="cart-collaterals row">
                    <div class="col-sm-6">
                        <div class="shipping">
                            <h3 class="text-danger">Thông tin giao hàng.</h3>
                        </div>
                        <div class="shipping-form">
                            <form method="post" class="form-horizontal">
                                <button asp-action="Checkout" asp-controller="Home" type="submit" class="button">Thanh Toán</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>