@model TaiKhoan

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<form method="post">
    <section class="main-container col1-layout">
        <div class="main container">
            <div class="page-content">
                <div class="account-login">
                    <div class="box-authentication">
                        <h4>Đổi mật khẩu</h4>
                        <div class="panel-group">
                            <label>Mật khẩu cũ</label>
                            <input class="form-control" name="oldPass" type="password" />
                            <span class="text-danger">@ViewBag.OldPasswordError</span>
                        </div>
                        <div class="panel-group">
                            <label>Mật khẩu mới</label>
                            <input class="form-control" asp-for="MatKhau" type="password" />
                            <span class="text-danger" asp-validation-for="MatKhau"></span>
                        </div>
                        <div class="panel-group">
                            <label>Nhập lại mật khẩu mới</label>
                            <input class="form-control" asp-for="NhapLaiMatKhau" type="password" />
                            <span class="text-danger" asp-validation-for="NhapLaiMatKhau"></span>
                        </div>
                        <button type="submit" class="button"><i class="fa fa-folder"></i>&nbsp; <span>Đồng ý</span></button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>