@model TaiKhoan

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Thông tin tài khoản</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" class="form-horizontal" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mật khẩu cũ</label>
                            <div class="col-sm-6">
                                <span>
                                    <input name="oldPass" type="password" class="form-control" />
                                    <span class="text-danger">@ViewBag.OldPasswordError</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mật khẩu mới</label>
                            <div class="col-sm-6">
                                <span>
                                    <input asp-for="MatKhau" type="password" class="form-control" />
                                    <span class="text-danger" asp-validation-for="MatKhau"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nhập lại mật khẩu mới</label>
                            <div class="col-sm-6">
                                <span>
                                    <input asp-for="NhapLaiMatKhau" type="password" class="form-control" />
                                    <span class="text-danger" asp-validation-for="NhapLaiMatKhau"></span>
                                </span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button asp-action="PasswordChange" type="submit" class="btn btn-default">Xác nhận</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>