@model TaiKhoan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Thông tin tài khoản</h5>
            </div>
            <div class="ibox-content">
                <form method="post" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Họ</label>
                        <div class="col-sm-6"><span class="form-control"><input asp-for="Ho" value="@Model.Ho" type="text" /></span></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tên</label>
                        <div class="col-sm-6"><span class="form-control"><input asp-for="Ten" value="@Model.Ten" type="text" /></span></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Hình ảnh</label>
                        <div class="col-sm-6"><span class="form-control"><input asp-for="HinhAnh" type="file" /></span></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-control">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button asp-action="Edit" type="submit" class="btn btn-default">Xác nhận</button>
                            <a asp-action="Index" class="btn btn-default">Hủy bỏ</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>