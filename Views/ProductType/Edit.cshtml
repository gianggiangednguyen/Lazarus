@model LoaiSanPham

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Thông tin loại tài khoản</h5>
            </div>
            <div class="ibox-content">
                <form method="post" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Họ</label>
                        <div class="col-sm-6"><input type="text" asp-for="TenLoaiSanPham" value="@Model.TenLoaiSanPham" class="form-control" /></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tên</label>
                        <div class="col-sm-6">
                            <select class="form-control" asp-for="TrangThai">
                                <option value="Hoạt động">Hoạt động</option>
                                <option value="Đã xóa">Đã xóa</option>
                            </select>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button asp-route-id="@Model.LoaiSanPhamId" class="btn btn-white" type="submit">Đồng ý</button>
                            <button asp-action="Index" asp-controller="AccountType" class="btn btn-primary" type="submit">Quay về</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>