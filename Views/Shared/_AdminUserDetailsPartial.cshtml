@model TaiKhoan

@{
    if (string.IsNullOrEmpty(Model.HinhAnh))
    {
        ViewData["img"] = "/Shop/images/default-user.png";
    }
    else
    {
        ViewData["img"] = "/AccountImages/" + Model.HinhAnh;

    }
}

<div class="dropdown profile-element">
    <div style="width:100px;height:100px;margin:auto;">
        <span>
            <img alt="image" class="img-circle" src="@ViewData["img"]" style="max-height:100%;max-width:100%;" />
        </span>
    </div>
    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
        <span class="clear">
            <span class="block m-t-xs">
                <strong class="font-bold">@Model.Ho @Model.Ten</strong>
            </span> <span class="text-muted text-xs block">@Model.MaLoaiTaiKhoanNavigation.TenLoaiTaiKhoan <b class="caret"></b></span>
        </span>
    </a>
    <ul class="dropdown-menu animated fadeInRight m-t-xs">
        <li><a href="#">Profile</a></li>
        <li><a href="#">Contacts</a></li>
        <li><a href="#">Mailbox</a></li>
        <li class="divider"></li>
        <li><a href="#">Logout</a></li>
    </ul>
</div>